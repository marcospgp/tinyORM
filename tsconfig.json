{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/strictest",
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    // This rule doesn't play well with react - it requires passing:
    //   <MyComponent {...(myValue ? { myProp: myValue } : {})} />
    // instead of:
    //   <MyComponent myProp=myValue />
    // when myProp can be undefined.
    "exactOptionalPropertyTypes": false,

    // Allow using @ to represent src folder.
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
