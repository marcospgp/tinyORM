{
  "name": "@hesoyam.zip/tiny-orm",
  "description": "A minimal storage layer radically optimized toward development speed.",
  "version": "0.1.7",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcospgp/tinyORM.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf ./dist && bun build index.ts --outdir dist && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.types.json --outdir dist",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.5",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
